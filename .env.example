# =============================================================================
# Ayurvedic Clinical Bridge - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# Security & Authentication
# =============================================================================
# Generate a secure secret key for JWT tokens
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-replace-with-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# Database Configuration (Optional - for future use)
# =============================================================================
# Currently not required but may be used for user data persistence
DATABASE_URL=sqlite:///./ayurvedic_bridge.db

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ENABLE_AUDIT_LOGGING=true
ANONYMIZE_LOGS=true

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=false
TESTING=false
ENVIRONMENT=development

# =============================================================================
# Data & Model Configuration
# =============================================================================
# Paths for data and model storage
MODEL_CACHE_DIR=./models
DATA_CACHE_DIR=./data/cache
COMPILED_KNOWLEDGE_DIR=./data/compiled_knowledge

# =============================================================================
# External API Configuration (Optional)
# =============================================================================
# Hugging Face API token for advanced NLP features (optional)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# =============================================================================
# Performance Settings
# =============================================================================
MAX_WORKERS=4
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# =============================================================================
# Safety and Compliance
# =============================================================================
DATA_RETENTION_DAYS=90
ENABLE_INTERACTION_WARNINGS=true
REQUIRE_PRACTITIONER_VERIFICATION=true

# =============================================================================
# CORS Configuration
# =============================================================================
# Frontend URLs that are allowed to access the API
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# =============================================================================
# Frontend Configuration (for reference)
# =============================================================================
# These should be set in frontend/.env file:
# VITE_BACKEND_URL=http://localhost:8000