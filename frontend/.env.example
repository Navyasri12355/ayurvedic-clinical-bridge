# =============================================================================
# Ayurvedic Clinical Bridge - Frontend Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# Backend API Configuration
# =============================================================================
# URL of the backend API server
# Development: http://localhost:8000
# Production: https://your-api-domain.com
VITE_BACKEND_URL=http://localhost:8000

# =============================================================================
# Application Configuration
# =============================================================================
# Application title and branding
VITE_APP_TITLE=Ayurvedic Clinical Bridge
VITE_APP_VERSION=1.0.0

# =============================================================================
# Feature Flags (Optional)
# =============================================================================
# Enable/disable specific features
VITE_ENABLE_MEDICINE_MAPPING=true
VITE_ENABLE_PRESCRIPTION_ANALYSIS=true
VITE_ENABLE_SAFETY_ANALYSIS=true
VITE_ENABLE_MODEL_COMPARISON=true

# =============================================================================
# Development Settings
# =============================================================================
# Enable development features
VITE_DEBUG_MODE=false
VITE_SHOW_API_RESPONSES=false

# =============================================================================
# Analytics (Optional)
# =============================================================================
# Add analytics tracking IDs if needed
# VITE_GOOGLE_ANALYTICS_ID=your-ga-id-here
# VITE_MIXPANEL_TOKEN=your-mixpanel-token-here